<%= render 'shared/error_messages' %>
<% @user = User.new %>
<%= form_for(@user) do |f| %>
	
	<%= f.label :fname %>
	<%= f.text_field :fname, placeholder: "First name" %>
	
	<%= f.label :lname %>
	<%= f.text_field :lname, placeholder: "Last name" %>
	
	<br />
	
	<%= f.label :email %>
	<%= f.email_field :email, placeholder: "Email address" %>
	
	<div id='signupChecks'>
		<span id='betaTestCheck'>
			<%= f.label :willingToBetaTest %>
			<% if (defined?(wants_to_beta_test) && wants_to_beta_test) %>
				<%= f.check_box :willingToBetaTest, checked: true %>
			<% else %>
				<%= f.check_box :willingToBetaTest %>
			<% end %>
			<span class='CheckboxLabel'>I'd like to help beta test</span>
		</span>
	
		<span id='artistCheck'>
			<%= f.label :isArtist %>
			<%= f.check_box :isArtist %>
			<span class='CheckboxLabel'>I'm an artist</span>
		</span>
	</div>
	
	<br />
	
	<%= f.submit "Join", class: "btn btn-large btn-primary", id: "joinButton" %>
<% end %>