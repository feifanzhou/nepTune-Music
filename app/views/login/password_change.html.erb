<div class='LoginContainer' id='loginContainer'>
	<%= link_to image_tag('logo.png', size:"259x50", id:'headerLogo', alt:'nepTune'), root_url(subdomain: "www") %>	
	<div class='Login' id='login'>
		
		<% if !(@password_change_error.blank?) %>
			<div class='alert alert-error' id='loginError'>
				<%= @password_change_error %>
			</div>
		<% end %>
		
		<%= form_for(:login, url: changepw_path, html: { id: 'pwHelpForm' }) do |f| %>			
			<%= f.label :old_password%>
			<%= f.password_field :old_password, placeholder: "Old password" %>
			<%= f.label :password%>
			<%= f.password_field :password, placeholder: "New password" %>
	
			<%= f.submit "Change password", class: "btn btn-large btn-primary", id: 'resetPasswordButton' %>
		<% end %>
	</div>
</div>
<%= render 'layouts/footer', footer_id: "appFooter" %>
