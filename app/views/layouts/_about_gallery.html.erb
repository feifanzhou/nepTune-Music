<%= link_to '#' do %><div class='Icon SliderNav SliderNavDisabled' id='sliderNavLeft'>&#59399;</div><% end %>
<div class='Slider' id='slider'>
	<% gallery_index = 0 %>
	<% artist.media_for_location(:AboutGallery).each do |m| %>
	<div class="SliderElement <%= 'SliderElementCurrent' if gallery_index == 0 %>" id="gallery<%= gallery_index %>">
		<% if is_editing %>
		<span class='Icon SliderElementRemove'>&#59407;</span>
		<% end %>
		<h2 class='SliderTitle NoblockTitle'><p><%= m.name %></p></h2>
		<%= m.show_html %>
	</div>
	<% gallery_index += 1 %>
	<% end %>
</div>
<%= link_to '#' do %><div class='Icon SliderNav' id='sliderNavRight'>&#59401;</div><% end %>