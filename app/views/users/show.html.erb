<header>
  <%= render 'layouts/app_header' %>
  <%= render 'layouts/playbar' %>
</header>
<div id='container' class='usersPage'>
  <%= render 'layouts/user_sidebar', user: @user, curr_nav: 1, is_editing: @is_editing,      
      is_following: @is_following %>
  <div class='DJAX XHidden' id='artistPageContent'>
    <div class='span8'>

      <% if @can_edit %>
      <div class='creditsDiv'>
        <p class='userCredits'> <b>Credits:</b> <span id='credits'><%= @user.credits %></span> </p>
      </div>
      <%= javascript_include_tag "https://https://js.stripe.com/v2/" %>
      <script type="text/javascript">
        // This identifies your website in the createToken call below
        Stripe.setPublishableKey('pk_test_iMhOgbsH06IanFKtsyoHW2zW');
      </script>
      <form action="" method="POST" id="creditForm">
        <span class="payment-errors"></span>
        <input type='hidden' name='user_id' id='userID' value='<%= @user.id %>' />

        <input type='text' name='new_credits' id='newCredits' placeholder='Add credits (value in cents)' />

        <div class="form-row">
          <input type="text" size="20" data-stripe="number" placeholder='Card number'/>
        </div>

        <div class="form-row">
          <input type="text" size="4" data-stripe="cvc" placeholder='CVC'/>
        </div>

        <div class="form-row">
          <input type="text" size="2" data-stripe="exp-month" placeholder='Exp. MM'/>

          <span> / </span>
          <input type="text" size="4" data-stripe="exp-year" placeholder='Exp. YYYY'/>
        </div>

        <button class='btn btn-primary' id='submitCredits' type="submit">Submit Payment</button>
      </form>
      <button class='btn btn-primary' id='addCredits'>Add credit</button>
      <% end %>

      <div id='relatedGalleries'>
        <div class='span3'>
          <span class='GalleryTitle'>
            Shared songs
          </span>
          <%= render 'shared/related_media', media: Song.all %>
        </div>

        <div class='span3'>
          <span class='GalleryTitle'>
            Recent plays/purchases
          </span>
          <%= render 'shared/related_media', media: Song.all %>
        </div>
      </div>
    </div>
  </div>
</div>




